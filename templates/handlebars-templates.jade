script(id="item-template" type="text/x-handlebars-template")
  {{#if categories}}
  {{#each category}}
  {{#each animals}}
  .category-wrap.col-md-4.col-lg-4.col-sm-4
    .category-content
      .img-wrap
        img.back(id="{{name}}", src="{{image2}}", data-category="{{@../index}}", data-index="{{@index}}")
      p.titleItem {{name}}
  {{/each}}
  {{/each}}
  {{else}}
  {{#each animals}}
  .category-wrap.col-md-4.col-lg-4.col-sm-4
    .category-content
      .img-wrap
